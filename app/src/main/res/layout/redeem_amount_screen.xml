<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ToolbarColoredBackArrow"
        app:titleTextColor="@android:color/white">

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
            android:text="Redeem Amount"
            android:textColor="@android:color/white" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="5"
                        android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                        android:text="Promo Balance"
                        android:textColor="@color/get_bike_black"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="0.5"
                        android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/get_bike_black"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/promoBalance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="4.5"
                        android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                        android:gravity="center"
                        android:text="0.0"
                        android:textColor="@color/get_bike_black"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="5"
                        android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                        android:text="Cash Balance"
                        android:textColor="@color/get_bike_black"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="0.5"
                        android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/get_bike_black"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/cashBalance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="4.5"
                        android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                        android:gravity="center"
                        android:text="0.0"
                        android:textColor="@color/get_bike_black"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="5"
                        android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                        android:text="Your Balance"
                        android:textColor="@color/get_bike_black"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="0.5"
                        android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/get_bike_black"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/yourBalance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="4.5"
                        android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                        android:gravity="center"
                        android:text="0.0"
                        android:textColor="@color/get_bike_black"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/rechargeMobile"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/rechargemobile" />

                <LinearLayout
                    android:id="@+id/rechargeMobileChild"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                        android:padding="5dp"
                        android:text="It will take upto 1 business day"
                        android:textColor="@color/gray_holo_dark"
                        android:textSize="@dimen/text_size_small" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:minHeight="45dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/rechargeMobileNumber"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/gray_border_style"
                            android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                            android:hint="Mobile Number"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:padding="5dp"
                            android:textColor="@color/get_bike_black"
                            android:textSize="@dimen/text_size_intermediate" />

                        <EditText
                            android:id="@+id/rechargeAmount"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/gray_border_style"
                            android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                            android:hint="Amount"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:padding="5dp"
                            android:textColor="@color/get_bike_black"
                            android:textSize="@dimen/text_size_intermediate" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:minHeight="45dp"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/operator"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/gray_border_style"
                            android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                            android:padding="5dp"
                            android:textColor="@color/get_bike_black"
                            android:textSize="@dimen/text_size_intermediate" />

                        <Spinner
                            android:id="@+id/circle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/gray_border_style"
                            android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                            android:padding="5dp"
                            android:textColor="@color/get_bike_black"
                            android:textSize="@dimen/text_size_intermediate" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/rechargeSubmit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@drawable/black_button_style"
                        android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                        android:padding="5dp"
                        android:text="Submit"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_intermediate" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/redeemToWallet"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/redeemtowallet" />

                    <LinearLayout
                        android:id="@+id/redeemToWalletChild"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                            android:padding="5dp"
                            android:text="It will take upto 1 business day"
                            android:textColor="@color/gray_holo_dark"
                            android:textSize="@dimen/text_size_small" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:minHeight="45dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/redeemMobileNumber"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/gray_border_style"
                                android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                                android:hint="Mobile Number"
                                android:inputType="phone"
                                android:maxLines="1"
                                android:padding="5dp"
                                android:textColor="@color/get_bike_black"
                                android:textSize="@dimen/text_size_intermediate" />

                            <EditText
                                android:id="@+id/redeemAmount"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/gray_border_style"
                                android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                                android:hint="Amount"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:padding="5dp"
                                android:textColor="@color/get_bike_black"
                                android:textSize="@dimen/text_size_intermediate" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:minHeight="45dp"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/walletName"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/gray_border_style"
                                android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                                android:padding="5dp"
                                android:textColor="@color/get_bike_black"
                                android:textSize="@dimen/text_size_intermediate" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:minHeight="40dp"
                                android:padding="5dp" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/redeemSubmit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:background="@drawable/black_button_style"
                            android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                            android:padding="5dp"
                            android:text="Submit"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_intermediate" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/redeemToBank"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/redeem_to_bank" />

                    <LinearLayout
                        android:id="@+id/redeemToBankChildView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                            android:padding="5dp"
                            android:text="It will take upto 1-5 business days"
                            android:textColor="@color/gray_holo_dark"
                            android:textSize="@dimen/text_size_small" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                            android:padding="5dp"
                            android:text="Do you want to register request to redeem through your bank account?"
                            android:textColor="@color/gray_holo_dark"
                            android:textSize="@dimen/text_size_small" />

                        <EditText
                            android:id="@+id/bankAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/gray_border_style"
                            android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                            android:hint="Amount"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:minHeight="45dp"
                            android:padding="5dp"
                            android:textColor="@color/get_bike_black"
                            android:textSize="@dimen/text_size_intermediate" />

                        <Button
                            android:id="@+id/redeemBankSubmit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:background="@drawable/black_button_style"
                            android:fontFamily="fonts/AvenirNextLTPro-Regular.otf"
                            android:padding="5dp"
                            android:text="Confirm"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_intermediate" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>