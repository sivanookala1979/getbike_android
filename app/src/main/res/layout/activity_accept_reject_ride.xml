<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_accept_reject_ride"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vave.getbike.activity.AcceptRejectRideActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Ride Requested By"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Ride Requested By"/>

    <TextView
        android:id="@+id/rideRequestedBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="14dp"
        android:text="Ride Requested By"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rideRequestedBy"
        android:layout_marginTop="19dp"
        android:text="Address"/>

    <TextView
        android:id="@+id/rideRequestAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="21dp"
        android:text="Address"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rideRequestAddress"
        android:layout_marginTop="26dp"
        android:text="Lat Lng"/>

    <TextView
        android:id="@+id/rideRequestLatLng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="21dp"
        android:text="Latitude Longitude"/>

    <Button
        android:id="@+id/rejectRide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/acceptRide"
        android:layout_marginStart="31dp"
        android:layout_toEndOf="@+id/textView3"
        android:text="Reject Ride"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Mobile Number"/>

    <TextView
        android:id="@+id/rideRequestMobileNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="12dp"
        android:text="Mobile Number"
        />

    <Button
        android:id="@+id/acceptRide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/rideRequestMobileNumber"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:background="@color/colorPrimary"
        android:text="Accept Ride"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/callRideRequestor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rideRequestMobileNumber"
        android:layout_alignBottom="@+id/rideRequestMobileNumber"
        android:layout_marginLeft="40dp"
        android:layout_toEndOf="@+id/rideRequestLatLng"
        android:text="Call"/>

</RelativeLayout>
