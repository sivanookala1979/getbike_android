<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_accept_reject_ride"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vave.getbike.activity.AcceptRejectRideActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Ride Requested By"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rideRequestedBy"
        android:layout_marginTop="19dp"
        android:text="Address"/>

    <Button
        android:id="@+id/rejectRide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Reject Ride  "
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_alignBaseline="@+id/acceptRide"
        android:layout_alignBottom="@+id/acceptRide"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="48dp" />

    <TextView
        android:id="@+id/rideRequestAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/rideRequestMobileNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Number"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/rideRequestLatLng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude Longitude"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/rideRequestedBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ride Requested By"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Number"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/rideRequestLatLng"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Lat Lng"
        android:layout_below="@+id/rideRequestAddress"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/acceptRide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="  Accept Ride  "
        android:textColor="@color/white"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@+id/callRideRequestor" />


</RelativeLayout>
