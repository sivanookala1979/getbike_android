<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_request_ride"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vave.getbike.activity.RequestRideActivity">

    <TextView
        android:text="Please click on Get Bike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/getBikeResult"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/myCompletedRides"/>

    <Button
        android:text="Get Bike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/requestRide"
        android:layout_below="@+id/getBikeResult"
        android:layout_alignStart="@+id/getBikeResult"/>

    <Button
        android:text="Start Ride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:id="@+id/startRide"
        android:layout_below="@+id/requestRide"
        android:layout_alignStart="@+id/myCompletedRides"/>

    <Button
        android:text="Completed Rides"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myCompletedRides"
        android:layout_marginStart="14dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:text="Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logout"
        android:layout_below="@+id/myCompletedRides"
        android:layout_alignStart="@+id/myCompletedRides"
        android:layout_marginTop="80dp"/>

    <Button
        android:text="Open Rides"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showOpenRides"
        android:layout_alignBaseline="@+id/startRide"
        android:layout_alignBottom="@+id/startRide"
        android:layout_toEndOf="@+id/myCompletedRides"/>

    <Button
        android:text="Rides Given"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/myCompletedRides"
        android:layout_toEndOf="@+id/getBikeResult"
        android:layout_marginStart="43dp"
        android:id="@+id/ridesGiven"/>
</RelativeLayout>
